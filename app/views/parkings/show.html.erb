<div class="container p-0">
  <%= render 'shared/banner', img_path: cl_image_path(@parking.photos.first.key) %>
  <div class='container card border-0'>
    <div class="card-show-info">
      <h4><b><%= @parking.name %></b></h4>
      <%= link_to toggle_favorite_parking_path(@parking), remote: true, method: :post do %>
        <%= render 'parkings/like_button', parking: @parking %>
      <% end %>
      <div class='d-flex'>
        <p><i class="fas fa-map-marked-alt"></i></p>
        <p><%= @parking.address %></p>
      </div>
      <div class='d-flex'>
        <p><i class="fas fa-info-circle"></i></p>
        <p><%= @parking.description %></p>
      </div>
      <p><i class="fas fa-yen-sign"></i><%= @parking.free_or_paid %></p>
    </div>
  </div>
  <div class="container btn-container mt-2">
    <div class="d-flex justify-content-around">
      <div class="btn-yellow mr-2" style="width: 100%;">
        <%= link_to parkings_path(to_parking: @parking.id) do %>
          <p class="mb-0 text-center"><i class="fas fa-directions"></i> Directions</p>
        <% end %>
      </div>
      <%= render 'reviews/modal' %>
    </div>
  </div>
  <div>
    <div class ='container mt-4'>
      <%= render 'review_pluralize' %>
    </div>
    <%= render 'review_carousel' %>
  </div>
</div>
